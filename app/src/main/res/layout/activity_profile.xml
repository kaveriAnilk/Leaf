<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_green"
    tools:context=".Profile">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_selection_bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/txt_profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#60AF63"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape"
        android:elevation="8dp"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="60dp"
            android:background="@drawable/circleshape"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="60dp">

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="Name of user"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape"
        android:elevation="8dp"
        android:layout_height="300dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins"
            android:text="Security"
            android:textSize="16sp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:elevation="1dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">

            </LinearLayout>
            <LinearLayout
                android:layout_width="250dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Biometric Authentication"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Biometric and screen lock"
                    android:textSize="10sp"></TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:elevation="1dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Set Upi Pin"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:elevation="1dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Blocked Users"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape"
            android:elevation="2dp"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Name of user"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>


    <TableLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:background="@color/white"/> <!-- Adjust scaleType as needed -->

            <ImageButton
                android:id="@+id/wallet"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wallet"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

            <ImageButton
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/profile"
                tools:ignore="TouchTargetSizeCheck" /><!-- Adjust scaleType as needed -->
        </TableRow>


        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="0dp"
                android:text="Home"
                android:textStyle="bold"
                android:layout_width="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="80dp"
                android:text="Wallet"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="80dp"
                android:text="Profile"
                android:textStyle="bold"
                android:layout_width="wrap_content"/>

        </TableRow>

    </TableLayout>
</RelativeLayout>