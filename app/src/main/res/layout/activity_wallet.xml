<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallet_bottom_nav"
    android:background="@color/home_green">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_selection_bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#60AF63"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="Wallet"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/homecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:background="@drawable/home_card"
        android:paddingLeft="10dp"
        android:text="Leaf Balance"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User's Name"
        android:textSize="32dp"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"/>


    <TextView
        android:layout_below="@+id/homecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_card"
        android:paddingLeft="10dp"
        android:text="Add Money to Wallet"
        android:textSize="18dp"
        android:textStyle="bold"
        android:inputType="number"
        tools:ignore="HardcodedText,SpUsage,TextViewEdits" />

    <EditText
        android:id="@+id/add_money_edt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
       android:layout_below="@+id/homecard"
        android:layout_marginTop="50dp"
        android:hint="Add Money"
        android:background="@drawable/edit_text_background"
        android:paddingLeft="20dp"
        android:inputType="number"
        android:maxLength="7"/>

    <ImageButton
        android:id="@+id/proceed_to_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/proceedtoadd_button"
        android:layout_below="@+id/add_money_edt"
        android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/spend_analytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/view_spend_analytics"
        android:layout_below="@+id/proceed_to_add"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rupee"
        android:layout_below="@+id/proceed_to_add"
        android:layout_marginTop="34dp"
        android:layout_marginStart="40dp"/>

    <TableLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:background="@color/white"/> <!-- Adjust scaleType as needed -->

            <ImageButton
                android:id="@+id/wallet"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wallet"
                android:scaleType="fitCenter"
                android:background="@color/white"/>

            <ImageButton
                android:id="@+id/profile"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile"
                android:scaleType="fitCenter"
                android:background="@color/white"/><!-- Adjust scaleType as needed -->
        </TableRow>


        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="0dp"
                android:text="Home"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="80dp"
                android:text="Wallet"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <TextView
                android:textAlignment="center"
                android:layout_marginLeft="80dp"
                android:text="Profile"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                tools:ignore="HardcodedText" />

        </TableRow>

    </TableLayout>

</RelativeLayout>